#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- -DCMAKE_BUILD_TYPE=Release

override_dh_auto_install:
	dh_auto_install
	# Ensure config and plugins directories are properly installed
	mkdir -p debian/loom/usr/share/loom/config
	mkdir -p debian/loom/usr/share/loom/plugins
	cp -r config/* debian/loom/usr/share/loom/config/ || true
	cp -r plugins/* debian/loom/usr/share/loom/plugins/ || true

override_dh_strip:
	dh_strip --exclude=loom